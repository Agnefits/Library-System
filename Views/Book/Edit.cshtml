@model Book

@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="BookID" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>ISBN</label>
        <input asp-for="ISBN" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Published Date</label>
        <input asp-for="PublishedDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Page Count</label>
        <input asp-for="PageCount" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Author</label>
        <select asp-for="AuthorID" asp-items="ViewBag.Authors" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Author</label>
        <select asp-for="AuthorID" asp-items="ViewBag.Authors" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Publisher</label>
        <select asp-for="PublisherID" asp-items="ViewBag.Publishers" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>