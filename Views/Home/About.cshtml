@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
}

<div class="about-container">
    <div class="about-content">
        <h1>About Our Library System</h1>
        <p class="intro-text">
            Our library management system helps in organizing books efficiently, improving user experience, and simplifying administrative tasks.
        </p>

        <h2>Key Features</h2>
        <div class="features">
            <div class="feature-item">
                <i class="fa fa-book"></i>
                <h3>Book Management</h3>
                <p>Add, edit, and categorize books easily.</p>
            </div>
            <div class="feature-item">
                <i class="fa fa-user"></i>
                <h3>Author & Publisher Tracking</h3>
                <p>Manage author and publisher details effectively.</p>
            </div>
            <div class="feature-item">
                <i class="fa fa-lock"></i>
                <h3>Secure & Fast</h3>
                <p>Ensures data integrity and security.</p>
            </div>
            <div class="feature-item">
                <i class="fa fa-desktop"></i>
                <h3>Responsive UI</h3>
                <p>Modern and user-friendly interface.</p>
            </div>
        </div>

        <h2>Meet the Developer</h2>
        <div class="developer-info">
            <img src="https://avatars.githubusercontent.com/u/80845796?v=4" alt="Developer Image" class="developer-image">
            <div class="developer-details">
                <h3>Abdallah Salah Abdallah</h3>
                <p> .NET Fullstack Track | DEPI2 EYouth - AST2_SWD5_S1</p>
            </div>
        </div>
    </div>
</div>
